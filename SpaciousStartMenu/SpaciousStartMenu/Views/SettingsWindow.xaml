<Window
    x:Class="SpaciousStartMenu.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SpaciousStartMenu.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{StaticResource R_SettingsTitle}"
    Width="800"
    Height="500"
    MaxWidth="1200"
    MaxHeight="800"
    Loaded="Window_Loaded"
    StateChanged="Window_StateChanged"
    Style="{StaticResource ToolWindowStyle}"
    mc:Ignorable="d">

    <Grid Style="{StaticResource BaseGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Style="{StaticResource SettingsTitleStyle}" Text="{StaticResource R_Settings_Setup}" />
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="RegShortcut"
                    Margin="40,5,5,5"
                    Click="RegShortcut_Click"
                    Content="{StaticResource R_RegStartupShortcut}"
                    Style="{StaticResource SettingsButtonStyle}" />
                <Button
                    x:Name="RemoveShortcut"
                    Margin="5"
                    Click="RemoveShortcut_Click"
                    Content="{StaticResource R_RemoveStartupShortcut}"
                    Style="{StaticResource SettingsButtonStyle}" />
            </StackPanel>
            <CheckBox
                x:Name="MinimizeStartup"
                Click="MinimizeStartup_Click"
                Content="{StaticResource R_MinimizeStartup}" />

            <TextBlock Style="{StaticResource SettingsTitleStyle}" Text="{StaticResource R_Settings_Minimize}" />
            <CheckBox x:Name="EscKeyMin" Content="{StaticResource R_EscKeyMinimized}" />
            <CheckBox x:Name="DblClickMin" Content="{StaticResource R_MarginDblClickMinimized}" />
            <CheckBox x:Name="CtrlClickDisabledMin" Content="{StaticResource R_DisabledMinimizeCtrlClick}" />

            <TextBlock Style="{StaticResource SettingsTitleStyle}" Text="{StaticResource R_Settings_Confirm}" />
            <CheckBox x:Name="ConfirmClose" Content="{StaticResource R_ConfirmClose}" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Click="OkButton_Click"
                Content="{StaticResource R_OkButton}"
                IsDefault="True"
                Style="{StaticResource CommandButtonStyle}" />
            <Button
                Click="CancelButton_Click"
                Content="{StaticResource R_CancelButton}"
                IsCancel="True"
                Style="{StaticResource CommandButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
