<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="StandardCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Margin" Value="40,5,10,5" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style BasedOn="{StaticResource StandardCheckBoxStyle}" TargetType="CheckBox" />

    <Style
        x:Key="SubCheckBoxStyle"
        BasedOn="{StaticResource StandardCheckBoxStyle}"
        TargetType="CheckBox">
        <Setter Property="Margin" Value="80,5,10,5" />
    </Style>

</ResourceDictionary>