<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="GroupTitleStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="5,15,5,0" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#D6FFFF" />
    </Style>

    <Style x:Key="IconTextStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="5,5,8,5" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    </Style>

    <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

</ResourceDictionary>