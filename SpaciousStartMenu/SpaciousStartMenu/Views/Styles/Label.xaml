<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="StandardLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style BasedOn="{StaticResource StandardLabelStyle}" TargetType="Label" />

    <Style
        x:Key="MenuItemLabelStyle"
        BasedOn="{StaticResource StandardLabelStyle}"
        TargetType="Label">
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style
        x:Key="EditItemLabelStyle"
        BasedOn="{StaticResource StandardLabelStyle}"
        TargetType="Label">
        <Setter Property="Margin" Value="10,10,10,3" />
    </Style>

</ResourceDictionary>